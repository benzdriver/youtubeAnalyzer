# =============================================================================
# YouTube Analyzer Frontend - Local Environment Configuration
# =============================================================================
# Copy this file to .env.local for local development
# This file contains frontend-specific environment variables

# =============================================================================
# API ENDPOINTS
# =============================================================================
# Backend API URL (required)
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL for real-time updates (required)
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable analytics tracking (Google Analytics, etc.)
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Enable export functionality
NEXT_PUBLIC_ENABLE_EXPORT=true

# Enable real-time updates via WebSocket
NEXT_PUBLIC_ENABLE_REAL_TIME_UPDATES=true

# Enable debug mode (shows debug info in UI)
NEXT_PUBLIC_ENABLE_DEBUG=true

# =============================================================================
# UI CONFIGURATION
# =============================================================================
# Default theme (light, dark, system)
NEXT_PUBLIC_DEFAULT_THEME=system

# Number of items to show per page in lists
NEXT_PUBLIC_ITEMS_PER_PAGE=10

# Auto-refresh interval for task status in milliseconds
NEXT_PUBLIC_AUTO_REFRESH_INTERVAL=5000

# =============================================================================
# ANALYSIS SETTINGS
# =============================================================================
# Maximum allowed video duration in seconds (1 hour = 3600)
NEXT_PUBLIC_MAX_VIDEO_DURATION=3600

# Default analysis depth (basic, detailed, comprehensive)
NEXT_PUBLIC_DEFAULT_ANALYSIS_DEPTH=detailed

# Maximum number of comments to analyze
NEXT_PUBLIC_MAX_COMMENTS=1000

# Supported export formats (comma-separated)
NEXT_PUBLIC_SUPPORTED_EXPORT_FORMATS=json,markdown,pdf,html

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Request timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=30000

# Number of retry attempts for failed API requests
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3

# Base delay between retries in milliseconds
NEXT_PUBLIC_API_RETRY_DELAY=1000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# Node environment
NODE_ENV=development

# =============================================================================
# ANALYTICS (OPTIONAL)
# =============================================================================
# Google Analytics tracking ID (if analytics enabled)
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Mixpanel project token (if analytics enabled)
# NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# =============================================================================
# EXTERNAL SERVICES (OPTIONAL)
# =============================================================================
# Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Hotjar site ID for user behavior analytics
# NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id

# =============================================================================
# PERFORMANCE SETTINGS (OPTIONAL)
# =============================================================================
# Enable service worker for caching
NEXT_PUBLIC_ENABLE_SW=false

# Enable image optimization
NEXT_PUBLIC_ENABLE_IMAGE_OPTIMIZATION=true

# Maximum image size for optimization in KB
NEXT_PUBLIC_MAX_IMAGE_SIZE=1024
